{
  "root": true,
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "import"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project":  ["./.tsconfig.eslintrc","tsconfig.json"]
  },
  "rules": {
    "max-len":[2,120]
  },
  "ignorePatterns": [
    "prisma/generated/type-graphql/*"
  ]
}
